{
  "manifest_version": 3,
  "name": "URL Scraper & Exporter",
  "version": "1.0",
  "description": "Scrape all URLs from the current page, copy to clipboard, or save as a text file.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scrape URLs"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
